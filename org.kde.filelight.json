{
    "id": "org.kde.filelight",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "command": "filelight",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "filelight",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/23.08.5/src/filelight-23.08.5.tar.xz",
                    "sha256": "b7fc4daefc0985dc4b0deeb3c25e09a1b85ff896560340e79cca5093d3f07522",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/filelight-$version.tar.xz"
                    }
                }
            ],
            "post-install": [
                "install -D /usr/share/icons/hicolor/128x128/apps/filelight.png /app/share/icons/hicolor/128x128/apps/filelight.png",
                "desktop-file-edit --set-key=\"Icon\" --set-value=\"${FLATPAK_ID}\" ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop"
            ]
        }
    ]
}
